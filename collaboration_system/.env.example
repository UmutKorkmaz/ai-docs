# Application Configuration
ENVIRONMENT=development
DEBUG=True
TESTING=False

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_MINUTES=60

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_docs_collaboration
DB_USER=ai_docs_user
DB_PASSWORD=your-database-password
DB_SSL_MODE=prefer

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_SSL=false

# WebSocket Configuration
WS_HOST=0.0.0.0
WS_PORT=8001
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
WS_MAX_MESSAGE_SIZE=10485760

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
TRACING_SERVICE_NAME=ai-docs-collaboration

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@ai-docs.com
SMTP_USE_TLS=true

# Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,md,py,js,html,css
STORAGE_BACKEND=local

# Search Configuration (Optional)
SEARCH_ENABLED=true
SEARCH_BACKEND=elasticsearch
SEARCH_HOST=localhost
SEARCH_PORT=9200
SEARCH_INDEX_PREFIX=ai_docs

# AI/ML Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key
ENABLE_CONTENT_SUGGESTIONS=false
ENABLE_SPAM_DETECTION=true
ENABLE_QUALITY_SCORING=true
MODEL_CACHE_DIR=models/cache

# Collaboration Configuration
MAX_SESSION_DURATION_HOURS=24
MAX_PARTICIPANTS_PER_SESSION=50
ENABLE_VERSION_HISTORY=true
MAX_EDIT_HISTORY_SIZE=1000
AUTO_SAVE_INTERVAL_SECONDS=30
CONFLICT_RESOLUTION_STRATEGY=operational_transformation

# Monitoring Services
GRAFANA_PASSWORD=admin-password
PROMETHEUS_RETENTION_DAYS=15

# SSL Configuration (Production)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# External Services (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SENTRY_DSN=your-sentry-dsn
ROLLBAR_ACCESS_TOKEN=your-rollbar-token

# Feature Flags
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_COMMENT_SYSTEM=true
ENABLE_QNA_SYSTEM=true
ENABLE_STUDY_GROUPS=true
ENABLE_FILE_UPLOADS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_AI_FEATURES=false
ENABLE_ADMIN_PANEL=true