# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/churn_prediction
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/churn_prediction_test

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=customer_churn_prediction

# Model Configuration
MODEL_PATH=./models
MODEL_VERSION=latest

# Monitoring Configuration
ENABLE_MONITORING=true
PROMETHEUS_PORT=8001
LOG_LEVEL=INFO

# Security Configuration
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# External API Keys (if needed)
EXTERNAL_API_KEY=your-api-key-here

# Cloud Configuration (if using cloud services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_BUCKET_NAME=your-gcp-bucket

# Feature Flags
ENABLE_REDIS_CACHE=false
ENABLE_METRICS=true
ENABLE_MODEL_MONITORING=true
ENABLE_DATA_VALIDATION=true

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=your-email@gmail.com

# Slack Configuration (for notifications)
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#ml-alerts